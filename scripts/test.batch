#!/bin/bash

#SBATCH --nodes=1                         # 1 node
#SBATCH --ntasks-per-node=1               # 1 task per node
#SBATCH --time=1-00:00:00                 # time limits: 1 day
#SBATCH --error=test.out                 # standard error file
#SBATCH --output=test.out                # standard output file
#SBATCH --partition=amdgpu                # partition name
#SBATCH --cpus-per-task=8                 # number of CPUs
#SBATCH --gpus-per-node=1                 # number of GPUs
#SBATCH --mail-user=kuceral4@fel.cvut.cz  # where send info about job
#SBATCH --mail-type=BEGIN,FAIL,END        # what to send, valid type values are NONE, BEGIN, END, FAIL, REQUEUE, ALL

display_help() {
  echo "Usage: sbatch [sbatch options] test.batch [script options]"
  echo "Sbatch Options:"
  echo "  --nodes              Number of nodes (default: 1)"
  echo "  --time               Time limit (default: 1-00:00:00)"
  echo "  --error              Standard error file (default: test.out)"
  echo "  --output             Standard output file (default: test.out)"
  echo "  --partition          Partition name (default: amdgpu)"
  echo "  --gpus-per-node      Number of GPUs per node (default: 1)"
  echo "  --cpus-per-task      Number of CPUs per task (default: 8)"
  echo
  echo "Script Options:"
  echo "  -b, --batch-size     Batch size (default: 16)"
  echo "  -h, --help           Display help"
  exit 1
}


# Set default values for variables
batch_size="16"

# Parse command line arguments
while [[ "$#" -gt 0 ]]; do
    case $1 in
        -b|--batch-size) batch_size="$2"; shift ;;
        -h|--help) display_help ;;
        *) echo "Unknown parameter passed: $1" >&2; exit 1 ;;
    esac
    shift
done

source .env

WANDB_API_KEY=c54dade10e3c04fca21bf96016298e59b1e030ae python main.py \
            action=test \
            run_name="Test" \
            ckpt_path="checkpoints/e51-iou0.60.ckpt" \
            train.batch_size="$batch_size" \
            train.num_workers=8